pipeline {
    agent {
        label "master"
    }
    tools{
     maven 'maven3.3.9'  
     
    }

    stages {
        stage('Preparation') {
            
            steps {
               git'git@github.com:dhanu629/wardeploy.git'
            
                   }
           
        }
           
        stage('Compile') {
            
            steps {
                          
              sh 'mvn -f project1/pom.xml clean compile'
                echo 'Compiling.'
                }
           
        }
       stage('Testing') {
            steps {
            
              sh 'mvn -f project1/pom.xml test'
                echo 'Testing..'
                }
           
        }
       stage('Deploy') {
            steps {
           
              sh 'mvn -f project1/pom.xml deploy'
                echo 'Building..'
                sh 'cp project1/target/project1.war /u01/tomcat8/webapps/'
                }
          
        }
    }
}
